@model eStore.WebMVC.Models.Goods.KeyboardViewModel

@{
    ViewBag.Title = Model.Name;
    Layout = "_Layout";
}

<div class="goods-page-container">
    <div class="goods-page-left-column">
        <h2>@Model.Name</h2>
        <img src="@Model.BigImageUrl" alt="Goods Image"/>
    </div>
    <div class="goods-page-right-column" id="goods-page-right-column">
        <div class="goods-page-details-container">
            <div class="goods-page-details-column">
                <p>Connection type: @String.Join("/", Model.ConnectionType)</p>
                <p>Type: @Model.Type</p>
                <p>Format: @Model.Size</p>
                @if (string.IsNullOrEmpty(Model.SwitchName))
                {
                    <p>Switches: @Model.SwitchName</p>
                }
                <p>#KRO: @Model.KeyRollover</p>
            </div>
            <div class="goods-page-details-column">
                <p>Material (keycap): @Model.KeycapMaterial</p>
                <p>Material (frame): @Model.FrameMaterial</p>
                <p>Backlight: @Model.Backlight</p>
                <p>Weight: @Model.Weight g</p>
                <p>Size: @Model.Length x @Model.Width x @Model.Height mm</p>
            </div>
        </div>
        <div class="goods-page-description">
            @Model.Description
        </div>
        <div class="goods-page-price">
            <div class="goods-page-price-int">@Math.Truncate(Model.Price)</div>
            <div class="goods-page-price-float">@Math.Truncate((Model.Price - Math.Truncate(Model.Price)) * 100)</div>
            <div class="goods-page-price-int">$</div>
        </div>
        @if (!Model.IsAddedToCart)
        {
            <a id="cart-button" class="goods-page-cart-button" asp-action="AddGoodsToCart" asp-controller="Account" asp-route-goodsId="@Model.Id" asp-route-returnUrl="@Context.Request.Path">
                ADD TO CART
            </a>
        }
        else
        {
            <button id="cart-button" class="goods-page-cart-button" asp-action="RemoveGoodsFromCart" asp-controller="Account" asp-route-goodsId="@Model.Id" asp-route-returnUrl="@Context.Request.Path">
                <svg width="26" height="19" viewBox="0 0 26 19" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M24 2L8.875 17.125L2 10.25" stroke="white" stroke-width="2.75" stroke-linecap="round" stroke-linejoin="round"/></svg>
            </button>
        }
    </div>
</div>
<script>
    let descriptionElement = document.getElementById("goods-page-right-column");
    descriptionElement.style.opacity = "100%";
    descriptionElement.style.paddingLeft = "40px";
    
    function toggleCartButton() {
        let button = document.getElementById("cart-button");
        button.innerHTML = '<svg width="26" height="19" viewBox="0 0 26 19" fill="none" xmlns="http://www.w3.org/2000/svg"<path d="M24 2L8.875 17.125L2 10.25" stroke="white" stroke-width="2.75" stroke-linecap="round" stroke-linejoin="round"/></svg>';
    }
</script>
        
