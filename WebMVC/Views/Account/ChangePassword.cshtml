@model ChangePasswordViewModel

@{
    ViewBag.Title = "Change Password";
    Layout = "_Layout";
}

<div class="register-container">
    <form asp-action="ChangePassword" asp-controller="Account" class="register-form">
        <div class="register-form-group">
            <label asp-for="CurrentPassword" class="register-label"></label>
            <input asp-for="CurrentPassword" class="register-input" type="password" autocomplete="off"/>
        </div>
        <div class="register-form-group">
            <label asp-for="NewPassword" class="register-label"></label>
            <input asp-for="NewPassword" class="register-input" type="password" autocomplete="off"/>
        </div>
        <div class="register-form-group">
            <label asp-for="ConfirmPassword" class="register-label"></label>
            <input asp-for="ConfirmPassword" class="register-input" type="password" autocomplete="off"/>
        </div>
        <div class="register-form-errors">
            <div asp-validation-summary="All" class="register-error"></div>
        </div>
        <input type="submit" class="register-submit-button" value="CHANGE"/>
    </form>
</div>